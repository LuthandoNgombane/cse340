
<h1><%= title %></h1>

<%- messages() %>

<div class="management-container">
    <h2>Welcome <%= locals.accountData.account_firstname %></h2>
    
    <p>You're logged in.</p>

    <p><a href="/account/update/<%= locals.accountData.account_id %>" title="Click to update account information">Update Account Information</a></p>

    <% if (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin') { %>
        <hr>
        <h3>Inventory Management</h3>
        <p><a href="/inv/" title="Access inventory management">Manage Inventory</a></p>
    <% } %>

      <div class="my-reviews">
        <h3>Manage My Reviews</h3>
        <% if (userReviews && userReviews.length > 0) { %>
          <ul>
            <% userReviews.forEach(review => { %>
              <li>
                <strong><%= review.inv_make %> <%= review.inv_model %></strong> 
                (Reviewed on <%= new Date(review.review_date).toLocaleDateString() %>)
                <br>
                <a href="/review/edit/<%= review.review_id %>">Edit</a> | 
                <a href="/review/delete-confirm/<%= review.review_id %>">Delete</a>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p>You haven't written any reviews yet.</p>
        <% } %>
      </div>
</div>

<% if (errors) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>
